generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agence {
  id          String @id @default(uuid())
  designation String @unique
  email       String @unique
  tel         String
  address     String
  sigle       String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  boats Boat[] @relation("agence_boat")
}

model Boat {
  id          String @id @default(uuid())
  designation String
  url_profile String
  agenceId    String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  agence Agence  @relation("agence_boat", fields: [agenceId], references: [id])
  Class  Class[] @relation("boat_class")
}

model Class {
  id          String  @id @default(uuid())
  name        String  @unique
  price       Decimal @default(5.0)
  description String
  others      Json
  boatId      String

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  boat Boat @relation("boat_class", fields: [boatId], references: [id])
}

model User {
  id        String @id @default(uuid())
  names     String @unique
  email     String @unique
  telephone String @unique
  address   Json
  role      String @default("USER")
}

model Ticket {
  id String @id @default(uuid())
}

model Program {
  id String @id @default(uuid())
}

model BoatProgram {
  id String @id @default(uuid())
}
